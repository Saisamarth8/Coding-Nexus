@model List<TutorialWebApp.Models.Domain.TutorialPost>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Tutorials  </h1>
    </div>
</div>


<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Tags</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var tutorialPost in Model)
                {
                    <tr>
                        <td>@tutorialPost.Id</td>
                        <td>@tutorialPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in tutorialPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="AdminTutorialPosts"
                               asp-action="Edit"
                               asp-route-id="@tutorialPost.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Tutorial Posts Found!</p>
    }

</div>